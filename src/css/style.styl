$c1 = #f3f1ec
$c2 = #eb5591
$c3 = #f5f0cf
$c4 = #2dadac
$c5 = #452c0a
$body-background-color = $c1
$body-color = $c5
$header-background-color = $c5
$header-color = $c1
$footer-background-color = $c5
$footer-color = $c1
$a-color = $c4
$blockquote-border-color = darken($body-background-color, 20%)
$code-background-color = $body-color
$code-color = $body-background-color
$table-border-color = $c5
//$contact-background-color = $footer-background-color
//$contact-color = $footer-color

/*
mixin-color(background-color = $body-background-color, color = $body-color)
  background-color background-color
  color color

mixin-color-align(background-color = $body-background-color, color = $body-color)
  mixin-color background-color color
  text-align center

mixin-color-alignxx(background-color = $body-background-color, color = $body-color, text-align)
  mixin-color background-color color
  if text-align is defined
    text-align center

mixin-inline-list()
  display inline-block
  list-style none

mixin-inline-list-margin()
  mixin-inline-list()
  margin-left 0.5rem
  margin-right 0.5rem

mixin-a(arguments)
  color arguments
  text-decoration none
*/

body
  background-color $body-background-color
  color $body-color
  margin 0px
  padding 0px
  & > header
    background-color $header-background-color
    color $header-color
    text-align center
    a
      color $header-color
      text-decoration none
    img
      max-height 32px
      max-width 32px
    ul
      padding-left 0px
      & > li
        display inline-block
        list-style none
        margin-left 0.5rem
        margin-right 0.5rem
  & > footer
    /*
    background-color $footer-background-color
    color $footer-color
    text-align center
    */
    @extends body > header

a
  color $a-color

blockquote
  border-left $blockquote-border-color solid 0.25rem
  padding-left 0.5rem

code:not(.hljs)
  background-color $code-background-color
  color $code-color

img
  max-height 320px
  max-width 100%

table
th
td
  border $table-border-color solid 1px
  border-collapse collapse

